@{
    ViewData["Title"] = "Hot Position";
}
@model List<WebGrabDemo.Models.PositionInfo>

<div class="row">
    <div class="col-md-12">
        <h2>Position List</h2>
        <ul>
            @foreach (var position in Model)
            {
                <li><a href="@(Url.Action("ShowPositionDetail")+"?onlineURL="+@position.PositionURL)" target="_blank">@position.PositionName</a></li>
                <li>@Html.Raw(position.PositionDescription)
                </li>
                <br/>
            }           
        </ul>
    </div>
</div>
